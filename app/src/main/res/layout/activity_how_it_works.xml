<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000"
    tools:context="com.androidmate.anuj.memoryenhancer.HowItWorks">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="How it Works"
        android:textColor="#00da7f"
        android:textSize="100px"
        android:id="@+id/tvHeader"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="As soon as you click on the Start button random numbers are going to pop in front of the screen.For ex :"
        android:id="@+id/tvHowItWorksPara1"
        android:layout_below="@+id/tvHeader"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="7"
        android:textSize="120px"
        android:id="@+id/textView"
        android:layout_below="@+id/tvHowItWorksPara1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your goal is to remember the sum of the numbers appearing on the screen.You can adjust the speed,dificulty or the maximum numbers that can appear by clicking on the settings button. "
        android:id="@+id/tvHowItWorksPara2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <ImageView
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:id="@+id/ivSettings"
        android:src="@drawable/settings"
        android:layout_below="@id/tvHowItWorksPara2"
        android:layout_marginTop="20px"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
